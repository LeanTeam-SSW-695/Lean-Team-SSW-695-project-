
#:import FloatLayout kivy.uix.floatlayout.FloatLayout
#:import BoxLayout kivy.uix.boxlayout.BoxLayout

<ScreenManagement>:
    ScreenLoading:
        name: 'Loading'
    ScreenLogin:
        name: 'Login'
    ScreenRegister:
        name: 'Register'
    ScreenOne:
        name: 'Start'
    ScreenImplement:
        name: 'Implement'


<ScreenLoading>:
    Image:
        source: 'Loading Picture.png'


<ScreenLogin>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Login Or Register'
            bold: True
            font_size: 36
            size_hint_y: .3
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Username: '
                size_hint_x: .3
            TextInput:
                id: username
                multiline: False
        Label:
            text: ''
            size_hint_y: .1
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Password: '
                size_hint_x: .3
            TextInput:
                id: password
                multiline: False
                password: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                text: 'No Account Yet? Register'
                size_hint_x: .3
                on_release: root.register()
            Label:
                text: ' '
                size_hint_x: .5
            Button:
                text: 'Login'
                size_hint_x: .2
                on_release: root.login()
        Label:
            text: ''
            size_hint_y: .3


<LoginFPop@Popup>:
    auto_dismiss: False
    size_hint: (None, None)
    size: (300,300)
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Login Failed!'
        Button:
            text: 'OK'
            on_release: root.dismiss()


<LoginPop@Popup>:
    auto_dismiss: False
    size_hint: (None, None)
    size: (300,300)
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Login Success!'
        Button:
            text: 'OK'
            on_release: root.dismiss()


<ScreenRegister>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Register'
            font_size: 36
            size_hint_y: .2
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Email Address: '
                size_hint_x: .3
            TextInput:
                id: email
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Username: '
                size_hint_x: .3
            TextInput:
                id: username
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Password: '
                size_hint_x: .3
            TextInput:
                id: password
                password: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                text: 'Back To Login'
                on_release: root.go_forward()
            Button:
                text: 'Register'
                on_release: root.Register()
        Label:
            text: ''
            size_hint_y: .4


<RegFailPop@Popup>:
    auto_dismiss: False
    size_hint: (None, None)
    size: (300,300)
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Register Failed!'
        Button:
            text: 'OK'
            on_release: root.dismiss()
<RegSuccessPop@Popup>:
    auto_dismiss: False
    size_hint: (None, None)
    size: (300,300)
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Register Succeeded!'
        Button:
            text: 'OK'
            on_release: root.dismiss()



<ScreenOne>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to Use Travel Companion'
            font_size: 36
            size_hint_y: .2
        Image:
            source: 'Image.jpg'
            size_hint_y: .4
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Origin Address: '
                size_hint_x: .3
            TextInput:
                id: Origin
                auto_indent: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Destination Address: '
                size_hint_x: .3
            TextInput:
                id: Destination
                auto_indent: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                text: 'Use Current Address as Origin Address'
                on_release: root.current_as_origin()
            Button:
                text: 'Use Current Address as Destination Address'
                on_release: root.current_as_destination()
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                text: 'Reset'
                on_release: root.reset()
                size_hint_x: .3
            Button:
                text: 'View Map And Trip Information'
                on_release: root.calc()
                size_hint_x: .7
        Button:
            size_hint_y: .1
            text: 'Implement Trip Details =>'
            on_release: root.go_Implement()


<ScreenImplement>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Please Implement Your Trip Details'
                font_size: 30
                halign: 'center'
                size_hint_y: .3
                text_size: self.width, None
            Label:
                text: 'According to latest US Hour-of-Service Regulations (Reference: "Commercial Motor Vehicle Driver Fatigue, Long-Term Health, and Highway Safety: Research Needs" (2016) ), we recommend you - as a driver for self-driving - to sleep for 8 hours at night, for your safe drive.'
                text_size: self.width, None
                size_hint_y: .7
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .15
            Label:
                text: 'What time do you plan to start your trip? (HH:MM in 24-hour-format)'
                text_size: self.width, None
                size_hint_x: .7
            TextInput:
                id: start_hour
                size_hint_x: .15
            Label:
                text: ':'
                size_hint_x: .1
            TextInput:
                id: start_min
                size_hint_x: .15
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .15
            Label:
                text: 'What time do you plan to start having lunch and resting at noon? (HH:MM in 24-hour-format)'
                text_size: self.width, None
                size_hint_x: .7
            TextInput:
                id: lunch_hour
                size_hint_x: .15
            Label:
                text: ':'
                size_hint_x: .1
            TextInput:
                id: lunch_min
                size_hint_x: .15
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .15
            Label:
                text: 'What time do you plan to start resting from night to morning? (HH:MM in 24-hour-format)'
                text_size: self.width, None
                size_hint_x: .7
            TextInput:
                id: sleep_hour
                size_hint_x: .15
            Label:
                text: ':'
                size_hint_x: .1
            TextInput:
                id: sleep_min
                size_hint_x: .15
        Button:
            text: 'Recommended Hotels =>'
            on_release: root.recommended_hotels()
            size_hint_y: .15
        Button:
            text: 'Check for Nearby Restaurants =>'
            on_release: root.nearby_restaurants()
            size_hint_y: .15


<ErrorPop@Popup>:
    auto_dismiss: False
    size_hint: (None, None)
    size: (300,300)
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'An Error Occurs!'
        Button:
            text: 'OK'
            on_release: root.dismiss()