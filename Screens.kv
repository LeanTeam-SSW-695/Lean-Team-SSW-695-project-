
#:import FloatLayout kivy.uix.floatlayout.FloatLayout
#:import BoxLayout kivy.uix.boxlayout.BoxLayout

<ScreenManagement>:
    ScreenLoading:
        name: 'Loading'
    ScreenLogin:
        name: 'Login'
    ScreenRegister:
        name: 'Register'
    ScreenOne:
        name: 'Start'
    ScreenTwo:
        name: 'Implement'
    ScreenPlans:
        name: 'Plans'



<ScreenLoading>:
    Image:
        source: 'Loading Picture.png'


<ScreenLogin>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Login Or Register'
            bold: True
            font_size: 36
            size_hint_y: .3
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Username: '
                size_hint_x: .3
            TextInput:
                id: username
                multiline: False
        Label:
            text: ''
            size_hint_y: .1
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Password: '
                size_hint_x: .3
            TextInput:
                id: password
                multiline: False
                password: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                text: 'No Account Yet? Register'
                size_hint_x: .3
                on_release: root.register()
            Label:
                text: ' '
                size_hint_x: .5
            Button:
                text: 'Login'
                size_hint_x: .2
                on_release: root.login()
        Label:
            text: ''
            size_hint_y: .3


<LoginPop@Popup>:
    auto_dismiss: False
    Label:
        text: 'Login Success!'
    Button:
        text: 'OK'
        on_release: root.dismiss()


<ScreenRegister>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Register'
            font_size: 36
            size_hint_y: .2
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Email Address: '
                size_hint_x: .3
            TextInput:
                id: email
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Username: '
                size_hint_x: .3
            TextInput:
                id: username
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Password: '
                size_hint_x: .3
            TextInput:
                id: password
                password: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                text: 'Check for Username Availability'
                on_release: root.check_availability()
            Button:
                text: 'Register'
                on_release: root.Register()
        Label:
            text: ''
            size_hint_y: .4


<RegFailPop@Popup>:
    auto_dismiss: False
    Label:
        text: 'Register Failed!'
    Button:
        text: 'OK'
        on_release: root.dismiss()

<RegSuccessPop@Popup>:
    auto_dismiss: False
    Label:
        text: 'Register Succeeded!'
    Button:
        text: 'OK'
        on_release: root.dismiss()


<ScreenOne>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: app.greetings_username()
            size_hint_y: .1
            halign: 'right'
        Label:
            text: 'Welcome to Use Travel Companion'
            font_size: 36
            size_hint_y: .2
        Image:
            source: 'Image.jpg'
            size_hint_y: .4
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Origin Address: '
                size_hint_x: .3
            TextInput:
                id: Origin
                auto_indent: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Label:
                text: 'Destination Address: '
                size_hint_x: .3
            TextInput:
                id: Destination
                auto_indent: True
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                text: 'Use Current Address as Origin Address'
                on_release: root.current_as_origin()
            Button:
                text: 'Use Current Address as Destination Address'
                on_release: root.current_as_destination()
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                text: 'Reset'
                on_release: root.reset()
            Button:
                text: 'Calculate'
                on_release: root.calc()
            Button:
                text: 'Show Directions on GoogleMap'
                on_release: root.GoogleMap()
        Button:
            size_hint_y: .1
            text: 'Implement Trip Details =>'
            on_release: root.go_forward()


<ScreenTwo>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: app.greetings_username()
            size_hint_y: .1
            halign: 'right'
        Label:
            text: 'Please Implement Your Trip Details'
            font_size: 26
        Label:
            text: 'According to latest US Hour-of-Service Regulations'
        Label:
            text: '(Reference: "Commercial Motor Vehicle Driver Fatigue, '
        Label:
            text: 'Long-Term Health, and Highway Safety: Research Needs" (2016) ), '
        Label:
            text: 'we recommend you - as a driver for self-driving - to sleep for'
        Label:
            text: '8 hours at night, and rest another 2 hours on day, for your safe drive.'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'What time do you plan to start your trip? (HH:MM in 24-hour-format)'
            TextInput:
                id: start_time
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'What time do you plan to start having lunch and resting at noon? (HH:MM in 24-hour-format)'
            TextInput:
                id: lunch-time
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'What time do you plan to start resting from night to morning? (HH:MM in 24-hour-format)'
            TextInput:
                id: sleep-time
        Button:
            text: 'Recommended Hotels =>'
            on_release: root.recommended_hotels()
        Button:
            text: 'Check for Nearby Restaurants =>'
            on_release: root.nearby_restaurants()

<ScreenHotels>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: app.greetings_username()
            size_hint_y: .1
            halign: 'right'


<ScreenRestaurants>:
    BoxLayout:
        orientation: 'vertical'
